<p>
  <strong>Open date:</strong>
  <%= @repair_request.open_date %>
</p>

<p>
  <strong>Close date:</strong>
  <%= @repair_request.close_date %>
</p>

<p>
  <strong>Request details:</strong>
  <%= @repair_request.request_details %>
</p>

<p>
  <strong>Request response:</strong>
  <%= @repair_request.request_response %>
</p>

<% if current_user && (current_user.has_role? :manager) %>
<p>
  <strong>Submitter:</strong>
  <%= @repair_request.submitter.username %>
</p>

<p>
  <strong>Responder:</strong>
  <% if @repair_request.responder_id.nil? %>
  <%= @repair_request.responder %>
  <% else %>
  <%= @repair_request.responder.username %>
  <% end %>
</p>

<% else current_user && (current_user.has_role? :renter) %>
<p>
  <strong>Submitter:</strong>
  <%= @repair_request.submitter.username %>
</p>

<p>
  <strong>Responder:</strong>
  <% if @repair_request.responder_id.nil? %>
  <%= @repair_request.responder %>
  <% else %>
  <%= @repair_request.responder.username %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_repair_request_path(@repair_request) %> |
<%= link_to 'Back', repair_requests_path %>
